
@{
    ViewData["Title"] = "Create";
}

@model Team

<div class="col-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfessionId">Profession</label>
                    <select asp-for="ProfessionId" asp-items="new SelectList(ViewBag.Professions, nameof(Profession.Id), nameof(Profession.Name))"></select>
                    <span asp-validation-for="ProfessionId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" id="exampleInputName1" placeholder="ImageFile">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>